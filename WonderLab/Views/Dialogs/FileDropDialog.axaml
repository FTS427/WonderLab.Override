<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="WonderLab.FileDropDialog"
			 x:DataType="vm:FileDropDialogViewModel"
			 xmlns:ui="using:WonderLab.Views.Controls"
			 xmlns:vm="using:WonderLab.ViewModels.Dialogs"
			 DragDrop.AllowDrop="True">
	<ui:DialogContentPanel Title="有文件被拖入"
						   PrimaryButtonContent="下一步"
						   IsPrimaryButtonVisible="True"
						   IsTopCloseButtonVisible="True">
		<ui:DialogContentPanel.Content>
			<Grid RowDefinitions="Auto, 5, Auto">
				<TextBlock>
					<Run Text="检测到文件“"/>
					<Run Text="{Binding FileName}"/>
					<Run Text="”被拖入，是否安装至 WonderLab？"/> 
				</TextBlock>
			</Grid>
		</ui:DialogContentPanel.Content>
	</ui:DialogContentPanel>
</UserControl>
